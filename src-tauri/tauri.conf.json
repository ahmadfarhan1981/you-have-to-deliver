{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "you-need-to-deliver",
  "version": "0.1.0",
  "identifier": "com.ahmadfarhan.you-need-to-deliver",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "You NEED to deliver!",
        "dragDropEnabled": false,
        "center": true,
        "minWidth": 1400,
        "minHeight": 900,
        "width": 1400,
        "height": 900


      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["assets/"]
  }
}
